  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/body-parser": "^1.19.5",
    "typescript": "^5.5.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "nodemon": "^3.1.4"
  }
}